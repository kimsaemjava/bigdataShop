<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 템플릿을 정의 (main화면 레이아웃 ; 사용자 페이지 템플릿) -->
	<definition name="mainTemplate" template="/WEB-INF/layout/mainLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/include/top.jsp" />
		<put-attribute name="content" value="/WEB-INF/include/content.jsp" />
	</definition>

	<definition name="index" extends="mainTemplate" />
	

	<!-- 템플릿을 정의 (main화면 레이아웃 ; 관리자 페이지 템플릿) -->
	<definition name="adminTemplate" template="/WEB-INF/layout/adminlayout.jsp">
		<put-attribute name="top" value="/WEB-INF/include/top.jsp" />
		<put-attribute name="adminleft" value="/WEB-INF/include/adminleft.jsp" />
		<put-attribute name="admincontent" value="/WEB-INF/include/admincontent.jsp" />
	</definition>

	<definition name="admin/index" extends="adminTemplate" />
</tiles-definitions>


